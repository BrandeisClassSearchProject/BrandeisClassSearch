<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_teacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="brandeisclasssearchproject.cs.brandies.edu.brandeisclasssearch.activities.ShowTeacher">

    <ImageView
        android:id="@+id/Teacher_Image"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:text="Instructor Information: "
        android:textStyle="bold"
        android:textSize="21dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tittle_show_teacher"
        android:layout_below="@+id/Teacher_Image"/>

    <!--
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    -->

    <TextView
        android:text="Lecturer for this course not found!"
        android:textSize="18dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tittle_show_teacher"
        android:id="@+id/teacher_show_teacher" />

</RelativeLayout>
